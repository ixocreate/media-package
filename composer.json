{
    "name": "ixocreate/media-package",
    "description": "IXOCREATE Media Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "require": {
        "php": "^7.1",
        "intervention/image": "^2.4.1",
        "firebase/php-jwt": "^5.0",
        "ixocreate/application": "^0.2",
        "ixocreate/admin-package": "^0.3",
        "ixocreate/collection": "^0.1",
        "ixocreate/filesystem-package": "^0.3",
        "symfony/asset": "^4.1",
        "cocur/slugify": "^3.1"
    },
    "require-dev": {
        "ext-gd": ">=2.0",
        "ext-imagick": "*",
        "ixocreate/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Media\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Misc\\Media\\": "tests/misc/",
            "Ixocreate\\Test\\Media\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
